<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_gravity="center"
    android:background="@drawable/background_main"

    android:orientation="vertical"
    tools:context="bonch.dev.school.ui.activities.SignInActivity">


    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="152dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="134dp"
            android:layout_height="155dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/hello_image"
            tools:layout_editor_absoluteX="28dp" />

        <TextView
            android:id="@+id/hello"
            android:layout_width="186dp"
            android:layout_height="99dp"
            android:text="Mobile \nDevelopment"
            android:textColor="#ffffff"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/password_sign_in_edit_text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintVertical_bias="0.571"
            tools:ignore="MissingConstraints" />


    </LinearLayout>

    <EditText
        android:id="@+id/email_sign_in_edit_text"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#2CFFFEFE"
        android:hint="  Почта"
        android:textColorHint="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_button"
        app:layout_constraintEnd_toEndOf="@+id/password_sign_in_edit_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/password_sign_in_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/password_sign_in_edit_text"
        app:layout_constraintVertical_bias="0.134"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/password_sign_in_edit_text"
        android:layout_width="250dp"
        android:layout_height="40dp"

        android:background="#2CFFFEFE"

        android:hint="  Пароль"
        android:textColorHint="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/sign_in_button"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/oval"
        android:backgroundTint="#151747"
        android:hint="Войти"
        android:textColor="#D2FFFFFF"
        android:textColorHint="#DFF1F1"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_button"
        app:layout_constraintEnd_toEndOf="@+id/password_sign_in_edit_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/password_sign_in_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/email_sign_in_edit_text"
        app:layout_constraintVertical_bias="0.947"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/oval"
        android:backgroundTint="#151747"
        android:hint="Зарегестрироваться"
        android:textAllCaps="false"
        android:textColorHint="#DFF1F1"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/sign_in_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sign_in_button"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.09" />



</androidx.constraintlayout.widget.ConstraintLayout>
