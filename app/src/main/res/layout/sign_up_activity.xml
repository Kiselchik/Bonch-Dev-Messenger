<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bonch.dev.school.ui.activities.SignUpActivity"
    android:layout_gravity="center"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    android:background="@drawable/background_main"
    >

    <TextView
        android:id="@+id/registration"
        android:text="Регистрация"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"/>


    <EditText
        android:id="@+id/email_sign_up_et"
        android:hint="Почта"
        android:textColorHint="#FFFFFF"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal= "true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/registration"
        android:background="#2CFFFEFE"

/>
    <EditText
        android:id="@+id/login_et"
        android:hint="Логин"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/email_sign_up_et"
        android:layout_centerHorizontal= "true"
        android:layout_marginTop="20dp"
        android:background="#2CFFFEFE"
        android:textColorHint="#FFFFFF"/>
    <EditText
        android:id="@+id/password_sign_up_et"
        android:hint="Пароль"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/login_et"
        android:layout_centerHorizontal= "true"
        android:layout_marginTop="20dp"
        android:background="#2CFFFEFE"
        android:textColorHint="#FFFFFF"/>
    <EditText
        android:id="@+id/password_confirm_et"
        android:hint="Подтвердите пароль"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/password_sign_up_et"
        android:layout_centerHorizontal= "true"
        android:layout_marginTop="20dp"
        android:background="#2CFFFEFE"
        android:textColorHint="#FFFFFF"/>

    <Button
        android:id="@+id/complete_sign_up_button"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/password_confirm_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/oval"
        android:backgroundTint="#151747"
        android:hint="Зарегестрироваться"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp" />

</RelativeLayout>

