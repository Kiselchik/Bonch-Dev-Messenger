<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >



    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#4D2A4D"
        >



        <EditText
            android:id="@+id/old_password_edit_text"
            android:hint="Старый пароль"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColorHint="#FFFFFF"
            android:background="#2CFFFEFE"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:id="@+id/new_password_edit_text"
            android:hint="Новый пароль"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColorHint="#FFFFFF"
            android:background="#2CFFFEFE"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/confirm_password_edit_text"
            android:hint="Подтвердите парооль"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColorHint="#FFFFFF"
            android:background="#2CFFFEFE"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/button_ok"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/oval"
            android:backgroundTint="#200A31"
            android:text="Поменять"
            android:textColor="#DFF1F1"
            android:textSize="18sp" />

    </LinearLayout>



</LinearLayout>
